<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:id="@+id/player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline4"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/player_account_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/champion_image"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="TODO"
                    />
                <com.google.android.material.chip.Chip
                    android:id="@+id/champion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/self_healing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/gold_earned_per_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/gold_earned_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/healing_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/damage_done_in_hand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/damage_taken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/damage_mitigated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/kills_deaths_assists"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/league_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loadout_selected_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loadout Selected"
                    android:layout_marginEnd="8dp"
                    style="?attr/borderlessButtonStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/items_bought_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items Bought"
                    android:layout_marginEnd="8dp"
                    style="?attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>